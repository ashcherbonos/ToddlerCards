<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LinearLayoutCentral">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MainWindowStatusText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="SetImage">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="SpacingImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="SetingsIcon">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_marginLeft">66dp</item>
        <item name="android:layout_marginRight">66dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="SetingsIconLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>